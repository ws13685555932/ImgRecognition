<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:skin="http://schemas.android.com/android/skin"
    tools:ignore="MissingPrefix"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    tools:context="com.momo.imgrecognition.module.login.view.LoginActivity">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_marginTop="10dp"
        android:background="@drawable/cover"
        android:scaleType="fitCenter"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <com.momo.imgrecognition.module.login.view.ClearEditText
        android:id="@+id/et_username"
        android:hint="@string/username_hint"

        style="@style/AppEditText"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:drawableLeft="@drawable/user"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/delete"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/iv_logo"/>

    <com.momo.imgrecognition.module.login.view.ClearEditText
        android:id="@+id/et_password"
        android:hint="@string/password_hint"

        style="@style/AppEditText"
        android:drawableLeft="@drawable/pass"
        android:drawableRight="@drawable/delete"
        android:drawablePadding="10dp"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"

        android:layout_below="@id/et_username"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btn_login"
        android:enabled="true"
        android:layout_below="@id/et_password"
        android:layout_marginTop="15dp"
        android:background="@drawable/style_button_login"
        android:textColor="@color/buttonTextColor"
        android:textSize="17sp"
        skin:enable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login"/>

    <RelativeLayout
        android:id="@+id/rl_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_login">

        <TextView
            android:id="@+id/tv_register_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/register_account"
            skin:enable="true"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="@string/forget_password"
            skin:enable="true"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_other_login"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#aabbcc"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:text="@string/other_login_way"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#aabbcc"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@id/tv_label"/>

            <View
                android:layout_width="100dp"
                android:layout_height="1dp"
                android:background="#aabbcc"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/tv_label"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_below="@id/rl_hint"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/qq"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/wechat"/>

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/weibo"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
