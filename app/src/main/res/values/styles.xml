<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
    </style>

    <style name="AppTheme.NoActionBarWithTranslucentStatus" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>
    
    <style name="AppEditText" >
        <item name="android:textSize">16sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:textCursorDrawable">@drawable/cursor_edittext</item>
    </style>

    <style name="TabText">
        <item name="android:textColor">@color/theme_color_primary_trans</item>
    </style>

    <style name="AppTheme.AppCompat.Dialog.Alert" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:maxWidth">1080px</item>
    </style>

    <!--选择皮肤时的textview样式-->
    <style name="SKinItemText">
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/ic_skin_item</item>
        <item name="android:drawableRight">@drawable/ic_tick</item>
    </style>

    <!--toolbar右边的小字-->
    <style name="ToolbarRightText">
        <item name="android:layout_marginRight">@dimen/toolbar_right_text_margin_right</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">right</item>
    </style>
</resources>
